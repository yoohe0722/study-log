<div class="contents row" >
  <%# <%= image_tag @user.image.url %>
  <p><%= @nickname %>さんの学習時間統計</p>
  <div class="card grid-6">
    <div class="card-body">
      <i class="fas fa-clock"></i>
      <div class="card-content">
        <div class="card-title">Total Time</div>
        <div class="card-desc">
          <span class="strong"><%= @count_all %></span>
          <span class="small">min</span>(<%= @count_all_hour %><span class="small">hour</span>)
        </div>
      </div>
    </div>
  </div>
  <div class="card grid-6">
    <div class="card-body">
      <i class="fas fa-calendar-alt"></i>
      <div class="card-content">
        <div class="card-title">This Month</div>
        <div class="card-desc">
          <span class="strong"><%= @count_month %></span><span class="small">min</span>(<%= @count_month_hour %><span class="small">hour</span>)
        </div>
      </div>
    </div>
  </div>
  <div class="card grid-6">
    <div class="card-body">
      <i class="fas fa-calendar-week"></i>
      <div class="card-content">
        <div class="card-title">This Week</div>
        <div class="card-desc">
          <span class="strong"><%= @count_week %></span><span class="small">min</span>(<%= @count_week_hour %><span class="small">hour</span>)
        </div>
      </div>
    </div>
  </div>
  <div class="card grid-6">
    <div class="card-body">
      <i class="fas fa-calendar-day"></i>
      <div class="card-content">
        <div class="card-title">Daily Average<span>(resent7days)</span></div>
        <div class="card-desc">
          <span class="strong"><%= @count_daily_avg %></span><span class="small">min</span>(<%= @count_daily_avg_hour %><span class="small">hour</span>)
        </div>
      </div>
    </div>
  </div>
  <p><%= @nickname %>さんの投稿一覧</p>
  <div class="contents_list">
    <% @posts.each do |post| %>
      <%= render partial: "posts/post", locals: { post: post } %>
    <% end %>
  </div>
  <%= paginate(@posts) %>
</div>
