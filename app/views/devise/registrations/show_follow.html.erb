<div class="contents row">
  <%= render 'devise/shared/stats' %>
  <h3><%= @title %></h3>
    <div class ="contents_list">
      <% if @users.any? %>
        <ul class="users follow">
          <% @users.each do |user| %>
            <li class="profile">
              <% if user.image?%>
                <%= link_to image_tag(user.image.url),user_path(user), class:"user_image" %>
              <% else %>
                <%= link_to image_tag('user_default.png'),user_path(user), class:"user_image" %>
              <% end %>
              <%= link_to user.nickname, user_path(user) %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>